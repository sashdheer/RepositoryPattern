<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Employee Registration</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-light bg-light mb-3">
        <div class="container">
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#topMenuBar">
                <span class="navbar-toggler-icon"></span>
            </button>
                <div class="collapse navbar-collapse" id="topMenuBar">
                    <div class="navbar-nav col-lg-6">
                        <div class="nav-item nav-link active">
                            @Html.ActionLink("Home", "Index", "Home", routeValues: null, htmlAttributes: new { id = "homeIndexLink" })
                        </div>
                        <div class="nav-item nav-link">
                            @Html.ActionLink("Employee Registration", "Index", "Employees", routeValues: null, htmlAttributes: new { id = "employeesLink" })
                        </div>
                        <div class="nav-item nav-link">@Html.ActionLink("About", "About", "Home", routeValues: null, htmlAttributes: new { id = "homeAboutLink" })</div>
                        <div class="nav-item nav-link">@Html.ActionLink("Contact", "Contact", "Home", routeValues: null, htmlAttributes: new { id = "homeContactLink" })</div>
                    </div>
                    <div class="navbar-nav col-lg-4">
                        <div class="nav-item">
                            <form class="form-inline my-2 my-lg-0">
                                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                            </form>
                        </div>
                    </div>
                    <div class="navbar-nav col-auto">
                        <div class="nav-item">
                            @Html.Partial("_LoginPartial")
                        </div>
                    </div>
                </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Employee Registration</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
